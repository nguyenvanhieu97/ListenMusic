<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/title_margin_top"
        android:text="@string/app_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/seek_bar"
        app:layout_constraintTop_toBottomOf="@id/song_name" />

    <TextView
        android:id="@+id/song_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/seek_bar"
        app:layout_constraintTop_toBottomOf="@id/song_name" />

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="@dimen/seek_bar_width"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/current_time" />

    <ImageButton
        android:id="@+id/next_button"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:layout_marginLeft="@dimen/button_margin_vertical"
        android:layout_marginTop="@dimen/button_margin_top"
        android:background="@drawable/round_conners"
        android:scaleType="fitXY"
        android:src="@drawable/next"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seek_bar" />

    <ImageButton
        android:id="@+id/play_pause_button"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:layout_marginTop="@dimen/button_margin_top"
        android:background="@drawable/round_conners"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toRightOf="@id/next_button"
        app:layout_constraintRight_toLeftOf="@id/previous_button"
        app:layout_constraintTop_toBottomOf="@id/seek_bar" />

    <ImageButton
        android:id="@+id/previous_button"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:layout_marginRight="@dimen/button_margin_vertical"
        android:layout_marginTop="@dimen/button_margin_top"
        android:background="@drawable/round_conners"
        android:scaleType="fitXY"
        android:src="@drawable/previous"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seek_bar" />

</android.support.constraint.ConstraintLayout>
